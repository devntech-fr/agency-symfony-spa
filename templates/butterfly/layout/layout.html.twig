{% extends 'base/base.html.twig' %}

{% block html_class %}{% endblock %}

{% block meta %}
    {{ parent() }}
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="description">
    <meta content="" name="keywords">
{% endblock %}

{% block title %}
    Butterfly Bootstrap Template
{% endblock %}

{% block favicon %}
    <link href="{{ asset('butterfly/images/favicon.png') }}" rel="icon">
    <link href="{{ asset('butterfly/images/apple-touch-icon.png') }}" rel="apple-touch-icon">
    <link
            rel="shortcut icon"
            href="{{ asset('/butterfly/images/favicon.png') }}"
            type="image/x-icon"
    />
{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Dosis:300,400,500,,600,700,700i|Lato:300,300i,400,400i,700,700i">
    {{ encore_entry_link_tags('butterfly') }}
{% endblock %}

{% block header %}
    {% include 'butterfly/layout/header.html.twig' %}
{% endblock %}

{% block hero %}{% endblock %}

{% block body %}{% endblock %}

{% block footer %}
    {% include 'butterfly/layout/footer.html.twig' %}
{% endblock %}

{% block back_to_top %}
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('butterfly') }}
{% endblock %}
